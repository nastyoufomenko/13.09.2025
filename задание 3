from math import factorial
n = input("Введите целое неотрицательное число: ")
try:
    n = int(n)
    if n < 0:
        print("Ошибка! Число должно быть неотрицательным.")
    else:
        result = factorial(n)
        print(f"Факториал числа {n} равен {result}")
except ValueError:
    print("Ошибка! Нужно ввести целое число.")
