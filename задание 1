import math
number = input("Введите целое неотрицательное число: ")

try:
    n = int(number)
except:
    print("Ошибка! Это не целое число.")
    exit()

if n < 0:
    print("Ошибка! Число не может быть отрицательным.")
else:
   result = math.factorial(n)
    print(f"Факториал числа {n} равен {result}")
